{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://kuzzle.io/schemas/request",
  "type": "object",
  "properties": {
    "controller": {
      "enum": [
        "admin",
        "auth",
        "bulk",
        "collection",
        "document",
        "index",
        "memoryStorage",
        "realtime",
        "security",
        "server"
      ]
    },
    "action": { "type": "string" },
    "index": { "type": "string" },
    "collection": { "type": "string" },
    "_id": { "type": "string" },
    "body": { "type": "object" },
    "from": { "type": "integer" },
    "size": { "type": "integer" },
    "scroll": { "type": "string" },
    "scrollId": { "type": "string" },
    "jwt": { "type": "string" },
    "includeTrash": { "type": "boolean" }
  },
  "required": ["controller", "action"]
}
